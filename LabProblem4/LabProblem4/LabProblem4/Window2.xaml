<Window x:Class="LabProblem4.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabProblem4"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Fast Freight Shipping Calculator" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" />

            <TextBlock Text="Weight of Package (in KG):" />
            <TextBox x:Name="txtWeight" Width="150" Margin="0 0 0 10" />

            <TextBlock Text="Distance (in miles):" />
            <TextBox x:Name="txtDistance" Width="150" Margin="0 0 0 10" />

            <Button Content="Calculate Shipping Charges" Click="CalculateCharges_Click" Width="200" />

            <TextBlock x:Name="lblResult" Margin="0 20 0 0" />
        </StackPanel>
    </Grid>
</Window>
