<Window x:Class="LabProblem4.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabProblem4"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Bank Charges Calculator" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" />

            <TextBlock Text="Ending Balance:" />
            <TextBox x:Name="txtBalance" Width="150" Margin="0 0 0 10" />

            <TextBlock Text="Number of Checks Written:" />
            <TextBox x:Name="txtChecks" Width="150" Margin="0 0 0 10" />

            <Button Content="Calculate Fees" Click="CalculateFees_Click" Width="150" />

            <TextBlock x:Name="lblResult" Margin="0 20 0 0" />
        </StackPanel>
    </Grid>
</Window>
